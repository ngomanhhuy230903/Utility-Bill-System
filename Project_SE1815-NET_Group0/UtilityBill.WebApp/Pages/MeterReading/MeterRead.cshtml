@page
@model UtilityBill.WebApp.Pages.MeterReading.MeterReadModel
@inject IConfiguration Configuration

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Nhập chỉ số mới</h5>
             <a href="/Index" class="btn btn-light btn-sm">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
        </div>
        <div class="card-body">

            <!-- CSV Upload -->
            <form enctype="multipart/form-data" method="post" asp-page-handler="UploadCsv">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                <div class="mb-3">
                    <label class="form-label">Hoặc tải lên CSV</label>
                    <input asp-for="CsvFile" type="file" class="form-control" />
                    <span asp-validation-for="CsvFile" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-outline-primary mb-4">Upload CSV</button>
            </form>

            <hr />

            <!-- Manual Entry -->
            <form method="post" asp-page-handler="CreateReading">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="Input.RoomId" class="form-label">Phòng</label>
                        <select asp-for="Input.RoomId" class="form-select" required>
                            <option value="">-- Chọn phòng --</option>
                            @foreach (var room in Model.Rooms)
                            {
                                <option value="@room.Id">Block @room.Block – @room.RoomNumber</option>
                            }
                        </select>
                        <span asp-validation-for="Input.RoomId" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Input.ReadingMonth" class="form-label">Tháng</label>
                        <input asp-for="Input.ReadingMonth" type="number" min="1" max="12" class="form-control" required />
                        <span asp-validation-for="Input.ReadingMonth" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Input.ReadingYear" class="form-label">Năm</label>
                        <input asp-for="Input.ReadingYear" type="number" min="2000" max="2100" class="form-control" required />
                        <span asp-validation-for="Input.ReadingYear" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.ElectricReading" class="form-label">Chỉ số điện</label>
                        <input asp-for="Input.ElectricReading" type="number" step="0.01" class="form-control" required />
                        <span asp-validation-for="Input.ElectricReading" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.WaterReading" class="form-label">Chỉ số nước</label>
                        <input asp-for="Input.WaterReading" type="number" step="0.01" class="form-control" required />
                        <span asp-validation-for="Input.WaterReading" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.ReadingDate" class="form-label">Ngày ghi chỉ số</label>
                        <input asp-for="Input.ReadingDate" type="date" class="form-control" required />
                        <span asp-validation-for="Input.ReadingDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.RecordedByUserId" class="form-label">Ghi bởi (User ID)</label>
                        <input asp-for="Input.RecordedByUserId" class="form-control" readonly />
                        <span asp-validation-for="Input.RecordedByUserId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-end">
                    <button type="submit" class="btn btn-success me-2">Lưu</button>
                    <button type="reset" class="btn btn-secondary">Xóa trắng</button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
