@page
@model UtilityBill.WebApp.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<h1>@ViewData["Title"]</h1>
<h4>Nhập mã OTP được gửi đến email của bạn và mật khẩu mới.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            @* Input ẩn để gửi email đi cùng request *@
            <input asp-for="Input.Email" type="hidden" />

            <div class="form-floating mb-3">
                <input asp-for="Input.Otp" class="form-control" autocomplete="one-time-code" aria-required="true" />
                <label asp-for="Input.Otp" class="form-label">Mã OTP</label>
                <span asp-validation-for="Input.Otp" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.NewPassword" class="form-label">Mật khẩu mới</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Đặt lại mật khẩu</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}