@page
@model UtilityBill.WebApp.Pages.Rooms.IndexModel
@{
    ViewData["Title"] = "Quản lý phòng trọ";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-door-open-fill"></i> @ViewData["Title"]</h1>
        <a asp-page="./Create" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> Thêm phòng mới</a>
    </div>

    <div class="main-content">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Số phòng</th>
                        <th>Block/Dãy</th>
                        <th>Tầng</th>
                        <th>Giá thuê (VNĐ)</th>
                        <th>Trạng thái</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model.Rooms)
                    {
                        <tr>
                            <td><strong>@room.RoomNumber</strong></td>
                            <td>@room.Block</td>
                            <td>@room.Floor</td>
                            <td>@room.Price.ToString("N0")</td>
                            <td>
                                @if (room.Status == "Occupied")
                                {
                                    <span class="badge bg-danger">Đã có người</span>
                                }
                                else if (room.Status == "Vacant")
                                {
                                    <span class="badge bg-success">Còn trống</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Bảo trì</span>
                                }
                            </td>
                            <td class="text-center action-buttons">
                                <a asp-page="./AssignTenant" asp-route-roomId="@room.Id" class="btn btn-sm btn-info text-white"><i class="bi bi-person-plus-fill"></i> Gán khách</a>
                                <a asp-page="./Edit" asp-route-id="@room.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil-square"></i> Sửa</a>
                                <a asp-page="./Delete" asp-route-id="@room.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash3-fill"></i> Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>