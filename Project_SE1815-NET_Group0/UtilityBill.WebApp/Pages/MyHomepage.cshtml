@page 
@model MyHomepageModel
@{
    ViewData["Title"] = "Home";
}
s
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="text-center mb-5">
                <h1 class="display-4">
                    <i class="bi bi-house-fill text-primary"></i>
                    Utility Bill Management System test
                </h1>
                <p class="lead">Welcome to the comprehensive utility bill management solution for residential complexes.</p>
            </div>

            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-door-open-fill text-primary" style="font-size: 3rem;"></i>
                            <h5 class="card-title mt-3">Room Management</h5>
                            <p class="card-text">Manage rooms, assign tenant, and track occupancy status.</p>
                            <a href="/Rooms" class="btn btn-primary">
                                <i class="bi bi-arrow-right"></i> Manage Rooms
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-receipt-cutoff text-success" style="font-size: 3rem;"></i>
                            <h5 class="card-title mt-3">Billing &amp; Invoices</h5>
                            <p class="card-text">Generate invoices, track payments, and manage billing cycles.</p>
                            <a href="/Billing" class="btn btn-success">
                                <i class="bi bi-arrow-right"></i> View Billing
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-tools text-warning" style="font-size: 3rem;"></i>
                            <h5 class="card-title mt-3">Maintenance</h5>
                            <p class="card-text">Schedule maintenance, track repairs, and manage facility upkeep.</p>
                            <a href="/Maintenance" class="btn btn-warning">
                                <i class="bi bi-arrow-right"></i> Maintenance
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Meter Reading Section -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-speedometer2 text-info" style="font-size: 3rem;"></i>
                            <h5 class="card-title mt-3">Meter Reading</h5>
                            <p class="card-text">Record and view current meter readings for utilities.</p>
                            <a href="/MeterReading/MeterRead" class="btn btn-info">
                                <i class="bi bi-arrow-right"></i> Meter Read
                            </a>
                        </div>
                    </div>
                </div>

                <!-- History Section -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-clock-history text-secondary" style="font-size: 3rem;"></i>
                            <h5 class="card-title mt-3">History</h5>
                            <p class="card-text">View historical meter reading and billing data.</p>
                            <a href="/MeterReading/History" class="btn btn-secondary">
                                <i class="bi bi-arrow-right"></i> View History
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-6 mb-4">
                    <div class="card border-primary">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-bell"></i> Quick Actions
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <a href="/Account/Login" class="btn btn-outline-success">
                                        <i class="bi bi-person"></i> Login
                                    </a>
                                }
                                else
                                {
                                    <div class="text-center mb-3">
                                        <i class="bi bi-person-circle text-primary" style="font-size: 2rem;"></i>
                                        <h6 class="mt-2 mb-0">Welcome, @User.Identity.Name!</h6>
                                    </div>
                                    <a href="/Billing" class="btn btn-outline-primary">
                                        <i class="bi bi-receipt"></i> View Bills
                                    </a>
                                    <a href="/Rooms" class="btn btn-outline-info">
                                        <i class="bi bi-house"></i> Manage Rooms
                                    </a>
                                    <form asp-page="/Account/Logout" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger w-100">
                                            <i class="bi bi-box-arrow-right"></i> Logout
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card border-info">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-info-circle"></i> System Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                <li><i class="bi bi-check-circle text-success"></i> Real-time notifications</li>
                                <li><i class="bi bi-check-circle text-success"></i> Automated billing</li>
                                <li><i class="bi bi-check-circle text-success"></i> Tenant management</li>
                                <li><i class="bi bi-check-circle text-success"></i> Maintenance scheduling</li>
                                <li><i class="bi bi-check-circle text-success"></i> Payment tracking</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12">
                    <div class="alert alert-light border">
                        <h6><i class="bi bi-lightbulb"></i> Getting Started</h6>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <p class="mb-2">To get started with the system:</p>
                            <ol class="mb-0">
                                <li>Click "Login" to access your account</li>
                                <li>Navigate to "Room Management" to set up your rooms</li>
                                <li>Use "Billing &amp; Invoices" to generate monthly bills</li>
                                <li>Test notifications to stay updated with system alerts</li>
                            </ol>
                        }
                        else
                        {
                            <p class="mb-2">Welcome back! Here's what you can do:</p>
                            <ol class="mb-0">
                                <li>Manage your rooms and tenants in "Room Management"</li>
                                <li>Generate and view bills in "Billing &amp; Invoices"</li>
                                <li>Schedule maintenance tasks in "Maintenance"</li>
                                <li>Check your cart for pending payments</li>
                                <li>View reports and analytics</li>
                            </ol>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
