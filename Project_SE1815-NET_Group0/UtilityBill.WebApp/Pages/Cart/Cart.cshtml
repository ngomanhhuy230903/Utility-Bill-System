@page "/Cart"
@model UtilityBill.WebApp.Pages.Cart.Cart

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <h2>Shopping Cart</h2>
    
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Payment Options</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <form method="POST" asp-page-handler="CreatePaymentMomo">
                                <input type="hidden" name="fullName" value="@Model.UserName" />
                                <input type="hidden" name="amount" value="@Model.GrandTotal" />
                                <input type="hidden" name="orderInfo" value="Thanh toán đặt hàng qua Momo tại UtilityStore" />

                                <button class="btn btn-danger btn-lg w-100" type="submit">
                                    <i class="fas fa-mobile-alt"></i> Pay with MoMo
                                </button>
                            </form>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <form method="POST" asp-page-handler="CreatePaymentUrlVnpay">
                                <input type="hidden" name="fullName" value="@Model.UserName" />
                                <input type="hidden" name="amount" value="@Model.GrandTotal" />
                                <input type="hidden" name="orderInfo" value="Thanh toán đặt hàng qua VnPay tại UtilityStore" />

                                <button class="btn btn-primary btn-lg w-100" type="submit">
                                    <i class="fas fa-credit-card"></i> Pay with VnPay
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Order Summary</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Customer:</span>
                        <strong>@Model.UserName</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Total Amount:</span>
                        <strong>@Model.GrandTotal.ToString("N0") VND</strong>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span>Grand Total:</span>
                        <strong class="text-primary">@Model.GrandTotal.ToString("N0") VND</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>